<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEE4"
    tools:context=".Setting.UserFragment">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:orientation="vertical">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="35sp"
           android:text="Usuarios"
           android:layout_marginTop="20dp"
           android:textColor="@color/black"
           android:textStyle="bold"/>

       <androidx.cardview.widget.CardView
           android:id="@+id/registrarUsuarios"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginStart="@dimen/margin_card"
           android:layout_marginTop="@dimen/margin_card"
           android:layout_marginEnd="@dimen/margin_card"
           android:layout_marginBottom="15dp"
           android:backgroundTint="#fff"
           android:foreground="?selectableItemBackground"
           app:cardCornerRadius="15dp"
           app:cardElevation="10dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/shape_item"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.1"
                   android:layout_gravity="left"
                   android:src="@drawable/user_add_png" />

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.8"
                   android:paddingLeft="10dp"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center_vertical"
                   android:text="Cargar Usuarios desde archivo"
                   android:textColor="#444"
                   android:textSize="20sp" />

               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.1"
                   android:src="@drawable/navig"/>

           </LinearLayout>
       </androidx.cardview.widget.CardView>

       <androidx.cardview.widget.CardView
           android:id="@+id/enrolarUsuarios"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginStart="@dimen/margin_card"
           android:layout_marginEnd="@dimen/margin_card"
           android:layout_marginBottom="@dimen/margin_card"
           android:backgroundTint="#fff"
           android:foreground="?selectableItemBackground"
           app:cardCornerRadius="15dp"
           app:cardElevation="10dp">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@drawable/shape_item"
               android:orientation="horizontal">

               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.1"
                   android:layout_gravity="left"
                   android:src="@drawable/huella" />

               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="0.8"
                   android:paddingLeft="10dp"
                   android:gravity="left|center_vertical"
                   android:layout_gravity="center_vertical"
                   android:text="Enrolar usuarios"
                   android:textColor="#444"
                   android:textSize="20sp" />

               <ImageView
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="0.1"
                   android:src="@drawable/navig"/>

           </LinearLayout>
       </androidx.cardview.widget.CardView>

   </LinearLayout>
</FrameLayout>